<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:clickable="false"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:textSize="20dp"
        android:paddingRight="40dp"
        android:text="Create Passcode"
        android:textColor="@color/white" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIco"
                android:layout_width="100dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sp" />

            <TextView
                android:id="@+id/txvEnter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgIco"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Create Your SafePe Wallet Passcode"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="51dp"
                android:layout_marginBottom="50dp"
                android:background="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/edtxPassCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_input_bg"
                android:gravity="center"
                android:hint="Enter Passcode"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/hint_foreground_light"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtxConfPassCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_input_bg"
                android:gravity="center"
                android:hint="Confirm Passcode"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/hint_foreground_light"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_buttons"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="Create"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/deactive_rounded_buttons"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text=" Cancel "
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/securebtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/lightline"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="Verified By Visa"
            android:src="@drawable/verified_by_visa" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/norton" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="MasterCard Secure"
            android:src="@drawable/master_card_securecode" />


    </LinearLayout>

    <View
        android:id="@+id/lightline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/darkline"
        android:background="#42aad8">

    </View>

    <View
        android:id="@+id/darkline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#0f5865"></View>
</LinearLayout>