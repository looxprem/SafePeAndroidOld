<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kac.x90entertain.paymentpackage.AddMoneythroughCall">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            >
            <ImageView
                android:id="@+id/clear_btn_add_throughcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="@drawable/ic_clear_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="    Back To Home"
                />
        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000"
            android:text="@string/addmoney_through_call"
            />
        <Button
            android:id="@+id/call_button_addmoney"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="18001033188"
            android:textSize="16dp"
            android:textColor="#000"
            android:textIsSelectable="true"
            android:background="@drawable/logout_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
</ScrollView>